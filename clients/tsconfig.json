{
  "compilerOptions": {
    "target": "ES2021", 
    "module": "ES2020",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
